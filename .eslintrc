{
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "es6":     true,
        "browser": true,
        "node":    true,
        "mocha":   true
    },   
    "parser": "babel-eslint",
    "extends": [
        "eslint:recommended" ,
        "plugin:react/recommended"
    ],    
    "plugins": [
        "react"
    ],
    "rules": {
        "react/display-name": 0,
        "no-unused-vars": ["error", { "vars": "all", "args": "after-used", "argsIgnorePattern": "^_" }]
    }
}